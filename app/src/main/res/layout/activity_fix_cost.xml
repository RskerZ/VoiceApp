<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9DCEA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/fixedcost_toolbar"
            style="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FBF3CB"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="固定支出"
            app:titleTextColor="#000000">

            <Switch
                android:id="@+id/fixedcost_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />


        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FBF3CB"
                    android:paddingTop="2dp"
                    android:paddingBottom="1dp"
                    app:srcCompat="@drawable/fixed_date" />

                <TextView
                    android:id="@+id/fixedcost_textview1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#FBF3CB"
                    android:gravity="center|center_vertical"
                    android:text="開始日期"
                    android:textColor="#6478A6"
                    android:textSize="15dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/fixedcost_editTextDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:drawableBottom="@drawable/line"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FBF3CB"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    app:srcCompat="@drawable/fixed_cost" />

                <TextView
                    android:id="@+id/fixedcost_textview2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#FBF3CB"
                    android:gravity="center|center_vertical"
                    android:text="金額"
                    android:textColor="#6478A6"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fixedcost_editTextNumber"
                    style="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="8pt"
                    app:drawableBottomCompat="@drawable/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FBF3CB"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    app:srcCompat="@drawable/fixed_cate" />

                <TextView
                    android:id="@+id/fixedcost_textview3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#FBF3CB"
                    android:gravity="center|center_vertical"
                    android:text="分類"
                    android:textColor="#6478A6"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fixedcost_editType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textSize="8pt"
                    app:drawableBottomCompat="@drawable/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FBF3CB"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    app:srcCompat="@drawable/fixed_subcate" />

                <TextView
                    android:id="@+id/fixedcost_textview4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#FBF3CB"
                    android:gravity="center|center_vertical"
                    android:text="子分類"
                    android:textColor="#6478A6"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/fixedcost_editSubType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:drawableBottom="@drawable/line"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="8pt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="0dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:background="#FBF3CB"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    app:srcCompat="@drawable/fixed_cycle" />

                <TextView
                    android:id="@+id/fixedcost_textview5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:background="#FBF3CB"
                    android:gravity="center|center_vertical"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="重複週期"
                    android:textColor="#6478A6"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/cycleTimeSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:gravity="right|center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:background="#FBF3CB"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    app:srcCompat="@drawable/fixed_note" />

                <TextView
                    android:id="@+id/fixedcost_textview6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="#FBF3CB"
                    android:gravity="center|center_vertical"
                    android:text="備註"
                    android:textColor="#6478A6"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/fixedcost_editRemark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.7"
                    android:background="@null"
                    android:drawableBottom="@drawable/line"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="left|center_vertical"
                    android:hint="今晚，來點備註吧..."
                    android:inputType="textMultiLine"
                    android:paddingLeft="10dp"
                    android:textColor="#000000"
                    android:textColorHighlight="#FFFFFF"
                    android:textCursorDrawable="@null"
                    android:textSize="8pt" />
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/fixedcost_saveBtn"
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape_save"
                    android:text="儲存"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/fixedcost_cancelBtn"
                    style="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape_cancel"
                    android:text="取消"
                    android:textColor="#FFFFFF"
                    android:textSize="24dp" />
            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>