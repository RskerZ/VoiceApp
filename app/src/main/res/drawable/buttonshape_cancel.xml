<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="3dp"
        android:top="3dp">
        <shape
            android:shape="rectangle">
            <!--設定陰影顏色-->
            <solid
                android:color="#394F82" />
            <!--設定圓角的尺寸-->
            <corners
                android:radius="20dp"/>
        </shape>
    </item>
    <!--物件部分-->
    <!--設置物件右邊跟下面的offset-->
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape
            android:shape="rectangle">
            <!--設定形狀的顏色-->
            <solid
                android:color="#6478A6"/>
            <!--設定圓角的尺寸-->
            <corners
                android:radius="20dp"/>
            <!--設定內容與邊界的距離-->

        </shape>
    </item>
</layer-list>